        <TextBox HorizontalAlignment="Center" Margin="0,124,0,0" x:Name="PINBox" VerticalAlignment="Top" Width="310"/>
        <Label HorizontalAlignment="Left" Margin="5,115,0,0" Content="PIN" VerticalAlignment="Top" Width="52" Height="24"/>
        <Label Content="Number" Margin="5,91,418,68"/>
