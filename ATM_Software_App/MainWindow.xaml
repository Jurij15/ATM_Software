<Window x:Class="ATM_Software_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM_Software_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="855"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Closing="Window_Closing"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Margin="0,0,0,-6">
        <Label Content="Account holder:" FontSize="20" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="30" Width="153"/>
        <TextBlock HorizontalAlignment="Left" Margin="168,10,0,0" TextWrapping="Wrap" Text="AccOwnerBox" FontSize="20" x:Name="AccOwnerBox" VerticalAlignment="Top" Height="30" Width="164"/>
        <Label Content="Funds:" FontSize="20" HorizontalAlignment="Left" Margin="428,10,0,0" VerticalAlignment="Top" Height="30" Width="62"/>
        <TextBlock HorizontalAlignment="Left" x:Name="AccMoneyBox" FontSize="20" Margin="495,10,0,0" TextWrapping="Wrap" Text="AccMoneyBox" VerticalAlignment="Top" Height="30" Width="173"/>
        <Label x:Name="InvalidMesage" Content="This account is not valid! You might not be allowed to preform certain actions!" HorizontalAlignment="Center" Margin="0,40,0,0" FontStyle="Normal" VerticalAlignment="Top" Width="486"/>
        <Separator HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Height="13" Width="835"/>
        <Button FontSize="20" Content="Deposit" x:Name="DepositBtn" Click="DepositBtn_Click" Margin="239,82,0,0" VerticalAlignment="Top" Height="60" Width="224"/>
        <Button FontSize="20" x:Name="WithdrawalBtn" Click="WithdrawalBtn_Click" Content="Withdrawal" Margin="10,82,0,0" VerticalAlignment="Top" Height="60" Width="224"/>
        <Separator HorizontalAlignment="Center" Margin="0,235,0,0" VerticalAlignment="Top" Height="15" Width="835"/>
        <TextBox HorizontalAlignment="Left" Margin="26,255,0,0" TextWrapping="Wrap" x:Name="AmountBox" VerticalAlignment="Top" Width="176"/>
        <Button Content="" x:Name="UniversalBtn" Click="UniversalBtn_Click" Margin="26,292,0,0" VerticalAlignment="Top"/>

    </Grid>
    <!-- Window content here -->
</Window>
